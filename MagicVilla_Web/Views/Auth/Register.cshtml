@model RegistrationRequestDTO


<form id="form" method="post" asp-action="Register">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username..." />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name..." />

            </div>
            <div class="col-6 offset-3 pb-2">
                <input id="password" asp-for="Password" type="text" class="form-control" placeholder="Password..." />
                
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="PasswordConfirm" class="form-control" placeholder="Confirn password..." />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button id="registerButton" type="submit" class="form-control btn-success" value="Submit">Register</button>

            </div>
        </div>
    </div>

    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}