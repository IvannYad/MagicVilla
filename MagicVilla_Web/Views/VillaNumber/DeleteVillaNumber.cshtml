@model VillaNumberDTO

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />

        <input asp-for="VillaNo" class="form-control" hidden/>
        <div class="row">
            <div class="col-2">
                <label asp-for="VillaNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNo" class="form-control" disabled/>
            </div>

            <div class="col-2">
                <label asp-for="SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SpecialDetails" class="form-control" rows="5" disabled></textarea>
            </div>

            <div class="col-2">
                <label for="villaName" class="control-label pt-2" style="font-size:20px;">Villa</label>
            </div>
            <div class="col-10 pb-3">
                <input id="villaName" asp-for="Villa.Name" class="form-control" disabled/>
            </div>

            <div class="d-flex justify-content-end">
                <div class="d-flex justify-content-start col-10">
                    <div class="d-flex justify-content-between col-10">
                        <div class="col-6">
                            <input type="submit" value="Delete" class="btn btn-danger form-control" />
                        </div>
                        <div class="col-6 m-2 mt-0 mb-0">
                            <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}